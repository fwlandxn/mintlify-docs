{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Zeno Documentation",
  "colors": {
    "primary": "#3B82F6",
    "light": "#3B82F6",
    "dark": "#3B82F6"
  },
  "favicon": "/images/white.png",
  "navigation": {
    "anchors": [
      {
        "anchor": "Website",
        "icon": "globe",
        "color": {
          "light": "#3B82F6",
          "dark": "#3B82F6"
        },
        "href": "https://zenobot.app/"
      },
      {
        "anchor": "Changelog",
        "icon": "clipboard-list",
        "color": {
          "light": "#3B82F6",
          "dark": "#3B82F6"
        },
        "href": "https://zenobot.app/changelog"
      }
    ]
  },
  "logo": "/images/white.png",
  "navbar": {
    "links": [],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://dashboard.mintlify.com"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "footer": {
    "socials": {
      "x": "https://zenobot.app/x",
      "github": "https://zenobot.app/github",
      "discord": "https://zenobot.app/discord"
    }
  },
  "background": {
    "decoration": "grid"
  },
  "appearance": {
    "default": "dark"
  },
  "fonts": {
    "family": "Poppins"
  },
  "search": {
    "prompt": "Search or ask"
  },
  "metadata": {
    "timestamp": true
  },
  "interaction": {
    "drilldown": true
  },
  "icons": {
    "library": "lucide"
  }
}
